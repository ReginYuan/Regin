/* components/like/index.wxss */

.container {
  /* 设置为flex布局  inline-flex 自适应*/
  display: inline-flex;
  /* 设置组件水平方向 */
  flex-direction: row;
  /* 设置内边距 */
  padding: 10rpx;
  width: 90rpx;

}

.container image {
  width: 32rpx;
  height: 28rpx;
}

.container text {
  /* 苹果 思源 *//* font-family: "PingFangSC-Thin"; */
  font-size: 24rpx;
  /* 行高消除空白 */
  line-height: 24rpx;
  color: #bbb;
  position: relative;
  bottom: 10rpx;
  left: 6rpx;
}
